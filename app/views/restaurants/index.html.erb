<div class="container">
  <div class="col">
    <div class="cards">
      <h1>List of Restaurants</h1>
      <% @restaurants.each do |restaurant| %>
        <div class="card-product">
          <div class="card-product-infos">
            <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>